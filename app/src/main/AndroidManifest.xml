<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lroap.myrecipeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ui.activities.LunchDetailDialogActivity"></activity>
        <activity android:name=".view.ui.activities.DessertRecipesActivity" />
        <activity android:name=".view.ui.activities.DinnerRecipesActivity" />
        <activity android:name=".view.ui.activities.LunchRecipesActivity" />
        <activity android:name=".view.ui.activities.addRecipesInfo" />
        <activity android:name=".view.ui.activities.AddRecipeMenu" />
        <activity android:name=".view.ui.activities.RecipeCategories" />
        <activity android:name=".view.ui.activities.RecipesDetailActivity"/>
        <activity android:name=".view.ui.activities.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>